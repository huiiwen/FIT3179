{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#ebe3db",
    "width": 390,
    "height": 350,
    "data": {
      "url": "https://raw.githubusercontent.com/huiiwen/FIT3179/refs/heads/main/Visualisation%202/School_finance_cleaned.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "viewSelector",
        "value": "Total Income",
        "bind": {
          "input": "select",
          "options": ["Total Income", "Income per Student"],
          "name": "Select view: "
        }
      }
    ],
    "transform": [
        {
        "filter": "datum['State/territory'] != 'Australia'"
        },
        {
            "filter": "datum['School sector'] == 'All'"
        },
        {
            "filter": "datum['School level'] == 'All'"
        },
        {
            "filter": "datum['Geolocation'] == 'All'"
        },
        {
            "filter": "datum['Income/expenditure item'] == 'Total gross income'"
        },
        {
          "calculate": "datum['State/territory'] === 'New South Wales' ? 'NSW' : datum['State/territory'] === 'Victoria' ? 'VIC' : datum['State/territory'] === 'Queensland' ? 'QLD' : datum['State/territory'] === 'South Australia' ? 'SA' : datum['State/territory'] === 'Western Australia' ? 'WA' : datum['State/territory'] === 'Tasmania' ? 'TAS' : datum['State/territory'] === 'Northern Territory' ? 'NT' : datum['State/territory'] === 'Australian Capital Territory' ? 'ACT' : datum['State/territory']",
          "as": "StateAbbreviation"
        },
        {
          "calculate": "viewSelector === 'Total Income' ? datum['Total income'] : datum['Income per student']",
          "as": "selected_metric"
        }
    ],
    "layer": [
      {
        "mark": {"type": "area", "interpolate": "monotone"},
        "encoding": {
          "x": {
            "field": "Calendar year",
            "type": "ordinal",
            "title": "Year"
          },
          "y": {
            "aggregate": "sum",
            "field": "Total income",
            "type": "quantitative",
            "title": "Total Income (Millions of AUD)",
            "scale": {"domain": [0, 100000]} 
          },
          "color": {
            "field": "StateAbbreviation",
            "type": "nominal",
            "title": "State"
          },
          "opacity": {
            "condition": {
              "test": "viewSelector === 'Total Income'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Calendar year", "type": "ordinal"},
            {"field": "StateAbbreviation", "type": "nominal"},
            {"field": "Total income", "type": "quantitative", "title": "Total Income (Millions)", "format":".2f"}
          ]
        }
      },
      {
        "mark": {"type": "line", "point": true, "interpolate": "monotone"},
        "encoding": {
          "x": {
            "field": "Calendar year",
            "type": "ordinal",
            "title": "Year"
          },
          "y": {
            "aggregate": "mean",
            "field": "Income per student",
            "type": "quantitative",
            "title": "Income per Student (AUD)"
          },
          "color": {
            "field": "StateAbbreviation",
            "type": "nominal",
            "title": "State"
          },
          "opacity": {
            "condition": {
              "test": "viewSelector === 'Income per Student'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Calendar year", "type": "ordinal"},
            {"field": "StateAbbreviation", "type": "nominal"},
            {"field": "Income per student", "type": "quantitative", "title": "Income per Student (AUD)"}
          ]
        }
      },
      {
        "transform": [
          {
            "window": [{"op": "rank", "as": "ranking"}],
            "sort": [{"field": "selected_metric", "order": "descending"}]
        },
        {"filter": "datum.ranking == 1"},
          {
            "calculate": "viewSelector === 'Total Income' ? 'Highest Total Income: ' + format(datum['Total income'], '.2f') + 'M AUD in ' + datum['StateAbbreviation'] + ', ' + datum['Calendar year']: 'Highest Income per Student: ' + datum['Income per student'] + ' AUD in ' + datum['StateAbbreviation'] + ', ' + datum['Calendar year']",
            "as": "text_annotation"
          }
        ],
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": -30,
          "dy": 0,
          "fontSize": 11,
          "fontStyle": "italic",
          "color": "darkred"
        },
        "encoding": {
          "text": {"field": "text_annotation"}
        }
      }
    ]
  }