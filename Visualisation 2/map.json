{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#ebe3db",
  "width": 400,
  "height": 350,
  "projection": {
    "type": "mercator"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/huiiwen/FIT3179/main/Visualisation%202/georef-australia-state@public.json",
    "format": {
      "type": "topojson",
      "feature": "georef-australia-state@public"
    }
  },
  "transform": [
    {
      "lookup": "properties.ste_name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/huiiwen/FIT3179/main/Visualisation%202/Simplified_Student-teacher_ratio_dataset.csv",
          "format": {"type": "csv"}
        },
        "key": "State or territory",
        "fields": ["Student-teacher ratio"]
      }
    }
  ],
  "layer": [
    {
      "mark": "geoshape",
      "encoding": {
        "color": {
          "field": "Student-teacher ratio",
          "type": "quantitative",
          "bin": {"maxbins": 5},
          "legend": {
            "title": "Student-Teacher Ratio"
          },
          "scale": {
            "scheme": "browns"
          }
        },
        "tooltip": [
          {"field": "properties.ste_name", "type": "nominal", "title": "State/territory"},
          {"field": "Student-teacher ratio", "title": "Student-Teacher Ratio", "type": "quantitative"}
        ]
      }
    },
    {
      "transform": [
        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "Student-teacher ratio", "order": "descending"}]
        },
        {
          "filter": "datum.ranking == 1"
        },
        {
          "calculate": "'Highest Student-Teacher Ratio: ' + datum['Student-teacher ratio']",
          "as": "text_annotation_raw"
        },
        {
          "calculate": "split(datum.text_annotation_raw, ': ')",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": -120,
        "dy": -80,
        "baseline": "middle",
        "fontStyle": "italic",
        "color": "darkred"
      },
      "encoding": {
        "text": {"field": "text_annotation"}
      }
    }
  ]
}
